{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@controllers": [
        "./src/controllers"
      ],
      "@DTOs": [
        "./src/DTOs"
      ],
      "@repositories": [
        "./src/repositories"
      ],
      "@database": [
        "./src/database"
      ],
      "@routes": [
        "./src/routes"
      ]
    },
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": [
    "src/**/*",
  ],
}
